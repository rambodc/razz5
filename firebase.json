{
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "!/.well-known/**",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/share/**",
        "function": "v1_post_share"
      },
      {
        "source": "/main/**",
        "destination": "/main"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "functions": {
    "source": "functions",
    "codebase": "default",
    "ignore": [
      "node_modules",
      ".git",
      "firebase-debug.log",
      "firebase-debug.*.log"
    ]
  }
}
